(defn tetrimino-to-coords [tetrimino]
  (->> tetrimino
       (map-indexed (fn [row-idx row]
                      (map (fn [col-idx]
                             [row-idx col-idx])
                           (keep-indexed (fn [idx elem] (when (pos? elem) idx)) row))))
       (reduce concat)))

